@using Microsoft.CST.OAT.Utils;

<input class="form-control" id="@id" type="text" @bind="SubProperty" placeholder="@placeholder" data-input-type="string-input" disabled="@isDisabled"/>

@code {
    [Parameter]
    public object? Object { get; set; }

    [Parameter]
    public string? SubPath { get; set; }

    [Parameter]
    public string id { get; set; } = string.Empty;

    [Parameter]
    public string placeholder { get; set; } = string.Empty;
    
    [Parameter]
    public bool isDisabled { get; set; }

    [Parameter]
    public Action onChangeAction { get; set; } = () => { };
    
    public string SubProperty
    {
        get
        {
            if (Helpers.GetValueByPropertyOrFieldName(Object, SubPath) is byte[] val)
            {
                return Convert.ToBase64String(val);
            }
            return string.Empty;
        }
        set
        {
            Helpers.SetValueByPropertyOrFieldName(Object, SubPath, Convert.FromBase64String(value));
            onChangeAction.Invoke();
        }
    }
}
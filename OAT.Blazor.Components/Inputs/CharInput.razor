@inherits BaseInput;
@using Microsoft.CST.OAT.Utils;
@using System;

<input class="form-control" id="@id" type="text" @bind="SubProperty" data-input-type="char-input" disabled="@isDisabled" />


@code {
    public string SubProperty
    {
        get
        {
            if (Helpers.GetValueByPropertyOrFieldName(Object, SubPath) is char val)
            {
                return val.ToString();
            }
            return new char().ToString();
        }
        set
        {
            if (byte.TryParse(value, out byte val))
            {
                Helpers.SetValueByPropertyOrFieldName(Object, SubPath, val);
                onChangeAction.Invoke();
            }
        }
    }
}
@using Microsoft.CST.OAT.Utils;
@using System;

<input class="form-control" id="@id" type="text" @bind="SubProperty" data-input-type="float-input"  disabled="@isDisabled"/>

@code {
    [Parameter]
    public object? Object { get; set; }

    [Parameter]
    public string? SubPath { get; set; }

    [Parameter]
    public string id { get; set; } = string.Empty;
    
    [Parameter]
    public bool isDisabled { get; set; }

    [Parameter]
    public Action onChangeAction { get; set; } = () => { };

    public string SubProperty
    {
        get
        {
            if (Helpers.GetValueByPropertyOrFieldName(Object, SubPath) is float val)
            {
                return val.ToString();
            }
            return string.Empty;
        }
        set
        {
            if (float.TryParse(value, out float val))
            {
                Helpers.SetValueByPropertyOrFieldName(Object, SubPath, val);
                onChangeAction?.Invoke();
            }
        }
    }
}
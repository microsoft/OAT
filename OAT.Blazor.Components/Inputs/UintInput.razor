@using Microsoft.CST.OAT.Utils;
@using System;

<input class="form-control" id="@id" type="text" @bind="SubProperty" data-input-type="uint-input" disabled="@isDisabled"/>

@code {
    [Parameter]
    public object? Object { get; set; }

    [Parameter]
    public string? SubPath { get; set; }

    [Parameter]
    public string id { get; set; } = string.Empty;
    
    [Parameter]
    public bool isDisabled { get; set; }

    [Parameter]
    public Action onChangeAction { get; set; } = () => { };

    public string SubProperty
    {
        get
        {
            if (Helpers.GetValueByPropertyOrFieldName(Object, SubPath) is uint val)
            {
                return val.ToString();
            }
            return string.Empty;
        }
        set
        {
            if (uint.TryParse(value, out uint intVal))
            {
                Helpers.SetValueByPropertyOrFieldName(Object, SubPath, intVal);
                onChangeAction.Invoke();
            }
        }
    }
}
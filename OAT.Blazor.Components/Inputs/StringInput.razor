@inherits BaseInput;

@using Microsoft.CST.OAT.Utils;

<input class="form-control" id="@id" type="text" @bind="SubProperty" placeholder="@placeholder" data-input-type="string-input" disabled="@isDisabled"/>

@code {
    [Parameter]
    public string placeholder { get; set; } = string.Empty;
    
    public string SubProperty
    {
        get
        {
            if (Helpers.GetValueByPropertyOrFieldName(Object, SubPath) is string val)
            {
                return val;
            }
            return string.Empty;
        }
        set
        {
            Helpers.SetValueByPropertyOrFieldName(Object, SubPath, value);
            onChangeAction.Invoke();
        }
    }
}
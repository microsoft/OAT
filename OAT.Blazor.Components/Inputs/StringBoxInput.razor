@inherits BaseInput;

@using Microsoft.CST.OAT.Utils;

<textarea id="@id" rows="5" cols="50" @bind="SubProperty" data-input-type="stringbox-input" disabled="@isDisabled"/>

@code {
    public string SubProperty
    {
        get
        {
            if (Helpers.GetValueByPropertyOrFieldName(Object, SubPath) is string val) 
            {
                return val;
            }
            return string.Empty;
        }
        set
        {
            Helpers.SetValueByPropertyOrFieldName(Object, SubPath, value);
            onChangeAction.Invoke();
        }
    }
}